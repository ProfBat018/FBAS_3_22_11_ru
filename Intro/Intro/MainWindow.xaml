    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="0.3*"/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <StackPanel HorizontalAlignment="Right"
                    Orientation="Horizontal"
                    Grid.Row="0" Grid.Column="1">

            <Button Click="minimizeBtn_Click" Name="minimizeBtn" Margin="5 0 5 0" Style="{StaticResource MaterialDesignFloatingActionMiniSecondaryLightButton}">
                <md:PackIcon Kind="Minimize"/>
            </Button>

            <Button Click="maximizeBtn_Click" Name="maximizeBtn" Margin="5 0 5 0"  Style="{StaticResource MaterialDesignFloatingActionMiniSecondaryLightButton}">
                <md:PackIcon Kind="Maximize"/>
            </Button>
            <Button Click="exitBtn_Click" Name="exitBtn" Margin="5 0 5 0"  Style="{StaticResource MaterialDesignFloatingActionMiniSecondaryLightButton}">
                <md:PackIcon Kind="Close"/>
            </Button>
        </StackPanel>
    </Grid>
</Window>
